{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "declarationDir": ".",
    "outDir": "./lib/",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node",
      "w3c-web-serial",
      "jest"
    ]
  },
  "include": ["src/**/*.ts", "scripts/**/*.ts"],
  "exclude": ["lib"]
}
