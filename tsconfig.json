{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "declarationDir": ".",
    "rootDir": "./src",
    "outDir": "./lib/",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node",
      "w3c-web-serial",
      "jest",
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "paths": {
      "*" : ["types/*"]
    }
  },
  "include": ["src/**/*.ts", "scripts/**/*.ts"],
  "exclude": ["lib"]
}
